<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".GiftActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="354dp"
        android:layout_height="454dp"
        android:background="#EAD7D7"
        android:backgroundTint="#FDECEC"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <Button
            android:id="@+id/mother"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="momgift"
            android:text="Mother Gifts"
            android:textAlignment="center"
            android:textColor="#833636"
            app:cornerRadius="10sp" ></Button>

        <Button
            android:id="@+id/father"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="dadgift"
            android:text="Father Gifts"
            android:textColor="#833636"
            app:cornerRadius="10sp" ></Button>

        <Button
            android:id="@+id/grandparents"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="grandparentsgift"
            android:text="Grandparent Gifts"
            android:textColor="#833636"
            app:cornerRadius="10sp"></Button>

        <Button
            android:id="@+id/sisters"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="sistergifts"
            android:text="Sister Gifts"
            android:textColor="#833636"
            app:cornerRadius="10sp"></Button>

        <Button
            android:id="@+id/brother"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="brothergifts"
            android:text="Brother Gifts"
            android:textColor="#833636"
            app:cornerRadius="10sp"></Button>

        <Button
            android:id="@+id/favorites"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="FavoriteGifts"
            android:text="Favorite Gifts"
            android:textColor="#833636"
            app:cornerRadius="10sp"></Button>


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gabriela"
        android:text="Christmas Gift Ideas"
        android:textColor="#833636"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="298dp"
        android:layout_height="38dp"
        android:text="Browse gifts ideas for friends and family! Click a gift to save it in favorite gifts for later!"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>